---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/jetbrains-mono";

interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<html lang="en" title="Ian Mungovan Blog">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WG8HT8RXZX"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-WG8HT8RXZX");
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Header title={title} />
    <title>Ian Mungovan Blog</title>
  </head>
  <body class="container w-2/3 max-w-screen-xl mx-auto">
    <slot />
    <Footer />
    <style>
      body {
        font-family: "JetBrains Mono", monospace;
      }
    </style>
  </body>
</html>
